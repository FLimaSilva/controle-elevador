<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.br.uellisson.controleelevador.view.RecordCardNfcActivity">

    <TextView
        android:id="@+id/tv_id_nfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/h_margin"
        android:text="@string/tutorial_record_nfc"
        android:textSize="@dimen/big_text" />

    <Button
        android:id="@+id/bt_save_nfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_id_nfc"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:onClick="clickSaveNfc"
        android:text="@string/save_nfc" />
</LinearLayout>
